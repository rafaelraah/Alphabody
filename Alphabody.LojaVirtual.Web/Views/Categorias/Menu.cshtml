@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Todos os produtos", "ListaProdutos", "Vitrine", null, new {@class = "btn btn-block btn-default btn-lg" });


@foreach (var linkCategoria in @Model)
{
    
    @Html.RouteLink(
    linkCategoria,
        new { controller = "Vitrine", action="ListaProdutos", categoria = linkCategoria, pagina = 1}, 
        new { @class = "btn btn-block btn-default btn-lg" 
                + (ViewBag.categoriaSelecionada == linkCategoria ? " btn-primary" : "" )} 
    )
    
}



